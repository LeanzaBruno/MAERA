<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
    </style>

    <style name="toolbar">
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textSize">20sp</item>
        <item name="android:elevation">1dp</item>
        <item name="android:background">@color/colorPrimary</item>
    </style>

    <style name="TabLayout" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textStyle">bold</item>
        <item name="android:background">@color/colorPrimary</item>
    </style>


    <style name="base">
        <item name="fontFamily">@font/open_sans</item>
    </style>

    <style name="title" parent="base">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="category" parent="base">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/onSecundary</item>
    </style>

    <style name="value" parent="base">
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="noFavourite" parent="base">
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
    </style>


    <style name="weatherReportCategory" parent="base">
        <item name="android:color">@color/onSecundary</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="result" parent="base">
        <item name="android:textColor">@color/onPrimary</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="activity_title" parent="base">
        <item name="android:textColor">@color/onPrimary</item>
        <item name="android:background">@color/colorPrimary</item>
    </style>

    <style name="pronareaResult" parent="base">
        <item name="android:textColor">@color/onPrimary</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="buttonStyle" parent="base">
        <item name="android:textSize">10sp</item>
        <item name="android:layout_width">24dp</item>
        <item name="android:layout_height">24dp</item>
    </style>

    <style name="secundaryText" parent="base">
        <item name="fontFamily">sans-serif</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/onSecundary</item>
    </style>

    <style name="primaryText" parent="base">
        <item name="fontFamily">sans-serif</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/onPrimary</item>
    </style>


    <style name="searchView" parent="Widget.AppCompat.Light.AutoCompleteTextView">
        <item name="android:background">@color/colorSearchView</item>
        <item name="android:textColor">@color/colorSearchViewHint</item>
        <item name="android:textColorHint">@color/colorSearchViewHint</item>
    </style>

    <style name="showingText" parent="base">
        <item name="android:textColor">@color/onPrimary</item>
        <item name="android:textSize">10sp</item>
    </style>

    <style name="activity_Aeropuerto_title" parent="base">
        <item name="fontFamily">@font/open_sans_bold</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/onPrimary</item>
    </style>

    <style name="activity_Aeropuerto_category" parent="base">
        <item name="fontFamily">@font/open_sans</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/onSecundary</item>
    </style>

    <style name="activity_Aeropuerto_value" parent="base">
        <item name="fontFamily">@font/open_sans</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/onPrimary</item>
    </style>

    <style name="activity_Aeropuerto_result" parent="base">
        <item name="fontFamily">@font/open_sans</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/onPrimary</item>
    </style>

    <style name="activity_Aeropuerto_message" parent="activity_Aeropuerto_category">
        <item name="android:textSize">14sp</item>
    </style>



    <!--Layout Aeropuerto.java-->
    <style name="layout_Aeropuerto_title">
        <item name="fontFamily">sans-serif-medium</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/onSurface</item>
    </style>
    <style name="layout_Aeropuerto_body2">
        <item name="fontFamily">sans-serif</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/onSurfaceSecond</item>
    </style>

    <style name="layout_Aeropuerto_caption">
        <item name="fontFamily">sans-serif</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/onSurfaceSecond</item>
    </style>



    <!--SearchBy bottom sheet dialog-->
    <style name="searchByText" parent="base">
        <item name="android:textSize">13sp</item>
        <item name="android:textColor">@color/onPrimary</item>
    </style>

    <style name="searchBySecundaryText" parent="base">
        <item name="android:textSize">13sp</item>
        <item name="android:textColor">@color/onSecundary</item>
    </style>


</resources>
