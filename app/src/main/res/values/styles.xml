<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="android:textColorSecondary">@color/onPrimary</item>
    </style>

    <style name="toolbar">
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textSize">20sp</item>
        <item name="android:elevation">1dp</item>
        <item name="android:background">@color/colorPrimary</item>
        <item name="android:titleTextColor">@color/onPrimary</item>
    </style>

    <style name="TabLayout" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textStyle">bold</item>
        <item name="android:background">@color/colorPrimary</item>
    </style>


    <style name="base">
        <item name="fontFamily">@font/open_sans</item>
    </style>

    <style name="title" parent="base">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="category" parent="base">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/colorSecundaryText</item>
    </style>

    <style name="value" parent="base">
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="noFavourite" parent="base">
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
    </style>


    <style name="weatherReportCategory" parent="base">
        <item name="android:color">@color/colorSecundaryText</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="result" parent="base">
        <item name="android:textColor">@color/colorPrimaryText</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="activity_title" parent="base">
        <item name="android:textColor">@color/onPrimary</item>
        <item name="android:background">@color/colorPrimary</item>
    </style>

    <style name="pronareaResult" parent="base">
        <item name="android:textColor">@color/colorPrimaryText</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="buttonStyle" parent="base">
        <item name="android:textSize">10sp</item>
        <item name="android:layout_width">24dp</item>
        <item name="android:layout_height">24dp</item>
    </style>

    <style name="secundaryText" parent="base">
        <item name="fontFamily">sans-serif</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/colorSecundaryText</item>
    </style>

    <style name="primaryText" parent="base">
        <item name="fontFamily">sans-serif</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/colorPrimaryText</item>
    </style>



    <style name="showingText" parent="base">
        <item name="android:textColor">@color/colorPrimaryText</item>
        <item name="android:textSize">10sp</item>
    </style>

    <style name="activity_airport_title" parent="base">
        <item name="fontFamily">@font/open_sans_bold</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/colorPrimaryText</item>
    </style>

    <style name="activity_airport_category" parent="base">
        <item name="fontFamily">@font/open_sans</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/colorSecundaryText</item>
    </style>

    <style name="activity_airport_value" parent="base">
        <item name="fontFamily">@font/open_sans</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/colorPrimaryText</item>
    </style>

    <style name="activity_airport_result" parent="base">
        <item name="fontFamily">@font/open_sans</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/colorPrimaryText</item>
    </style>

    <style name="activity_airport_message" parent="activity_airport_category">
        <item name="android:textSize">14sp</item>
    </style>



    <!--Layout airport-->
    <style name="layout_airport_title">
        <item name="fontFamily">sans-serif-medium</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/onBackground</item>
    </style>
    <style name="layout_airport_body2">
        <item name="fontFamily">sans-serif</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/SecundaryOnBackground</item>
    </style>

    <style name="layout_airport_caption">
        <item name="fontFamily">sans-serif-medium</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/SecundaryOnBackground</item>
    </style>



    <!--SearchBy bottom sheet dialog-->
    <style name="searchByText" parent="base">
        <item name="android:textSize">13sp</item>
        <item name="android:textColor">@color/colorPrimaryText</item>
    </style>

    <style name="searchBySecundaryText" parent="base">
        <item name="android:textSize">13sp</item>
        <item name="android:textColor">@color/colorSecundaryText</item>
    </style>


</resources>
