<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="base">
        <item name="android:textColor">@color/colorPrimaryText</item>
        <item name="fontFamily">@font/ubuntu_medium</item>
    </style>

    <style name="title" parent="base">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="category" parent="base">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/colorSecundaryText</item>
    </style>

    <style name="value" parent="base">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="weatherReport" parent="base">
        <item name="android:textSize">16sp</item>
        <item name="android:gravity">center</item>
    </style>

</resources>
