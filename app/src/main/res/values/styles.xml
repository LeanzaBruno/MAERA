<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>



    <style name="tabItem">
        <item name="android:textColor">#FFFFFF</item>
    </style>


    <style name="airportName">
        <item name="fontFamily">serif-monospace</item>
        <item name="android:textSize">16sp</item>
        <item name="android:color">@color/colorSecundaryText</item>
    </style>

    <style name="airportCode">
        <item name="fontFamily">monospace</item>
        <item name="android:textSize">15sp</item>
        <item name="android:color">@color/colorPrimaryText</item>
    </style>

    <style name="airportFir">
        <item name="fontFamily">monospace</item>
        <item name="android:textSize">15sp</item>
        <item name="android:color">@color/colorSecundaryText</item>
    </style>

    <style name="weatherReport">
        <item name="fontFamily">serif-monospace</item>
        <item name="android:textSize">14sp</item>
        <item name="android:color">@color/colorSecundaryText</item>
    </style>

</resources>
