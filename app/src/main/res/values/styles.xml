<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
    </style>

    <style name="TabLayout" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">11sp</item>
        <item name="fontFamily">@font/roboto</item>
    </style>


    <style name="base">
        <item name="fontFamily">@font/open_sans</item>
    </style>

    <style name="title" parent="base">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="category" parent="base">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/colorSecundaryText</item>
    </style>

    <style name="value" parent="base">
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="noFavourite" parent="base">
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
    </style>


    <style name="weatherReportCategory" parent="base">
        <item name="android:color">@color/colorSecundaryText</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="result" parent="base">
        <item name="android:textColor">@color/colorPrimaryText</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="pronareaResult" parent="base">
        <item name="android:textColor">@color/colorPrimaryText</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="buttonStyle" parent="base">
        <item name="android:textSize">10sp</item>
        <item name="android:layout_width">24dp</item>
        <item name="android:layout_height">24dp</item>
    </style>

    <style name="secundaryText" parent="base">
        <item name="fontFamily">sans-serif</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/colorSecundaryText</item>
    </style>

    <style name="primaryText" parent="base">
        <item name="fontFamily">sans-serif</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/colorPrimaryText</item>
    </style>

    <style name="cardView_first">
        <item name="fontFamily">@font/open_sans_bold</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/colorPrimaryText</item>
    </style>

    <style name="cardView_second">
        <item name="fontFamily">@font/open_sans</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/colorPrimaryText</item>
    </style>

    <style name="cardView_third">
        <item name="fontFamily">@font/open_sans</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/colorSecundaryText</item>
    </style>

    <style name="showingText" parent="base">
        <item name="android:textColor">@color/colorPrimaryText</item>
        <item name="android:textSize">10sp</item>
    </style>

    <style name="activity_airport_title" parent="base">
        <item name="fontFamily">@font/open_sans_bold</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/colorPrimaryText</item>
    </style>

    <style name="activity_airport_category" parent="base">
        <item name="fontFamily">@font/open_sans</item>
        <item name="android:textSize">10sp</item>
        <item name="android:textColor">@color/colorSecundaryText</item>
    </style>

    <style name="activity_airport_value" parent="base">
        <item name="fontFamily">@font/open_sans_bold</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/colorPrimaryText</item>
    </style>




    <!--SearchBy bottom sheet dialog-->
    <style name="searchByText" parent="base">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/colorPrimaryText</item>
    </style>

</resources>
