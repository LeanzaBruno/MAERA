<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
    </style>

    <style name="TabLayout" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">11sp</item>
        <item name="fontFamily">@font/roboto</item>
    </style>


    <style name="base">
        <item name="android:textColor">@color/colorPrimaryText</item>
        <item name="fontFamily">@font/roboto</item>
    </style>

    <style name="title" parent="base">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="category" parent="base">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/colorSecundaryText</item>
    </style>

    <style name="value" parent="base">
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="weatherReportCategory" parent="base">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="weatherReportResult" parent="base">
        <item name="android:textSize">14sp</item>
    </style>

    <style name="buttonStyle" parent="base">
        <item name="android:textSize">10sp</item>
        <item name="android:layout_width">24dp</item>
        <item name="android:layout_height">24dp</item>
    </style>


    <style name="cardView_icao">
        <item name="fontFamily">@font/roboto_bold</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/colorPrimaryText</item>
    </style>

    <style name="cardView_name">
        <item name="fontFamily">@font/roboto</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/colorPrimaryText</item>
    </style>

    <style name="cardView_location">
        <item name="fontFamily">@font/roboto</item>
        <item name="android:textSize">11sp</item>
        <item name="android:textColor">@color/colorSecundaryText</item>
    </style>

</resources>
